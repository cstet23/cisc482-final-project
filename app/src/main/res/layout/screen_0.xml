<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/matchingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MatchingGame">

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the red circle"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Probably needs a custom view here to contain the shapes for the game space -->
    <!-- Red Circle -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="red_circle"
        android:onClick="onShapeClick" />

    <!-- Blue Circle -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="blue_circle"
        android:onClick="onShapeClick" />

    <!-- Red Triangle -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="red_triangle"
        android:onClick="onShapeClick" />

    <!-- Blue Triangle -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="onShapeClick"
        android:tag="blue_triangle" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0/5" />
</RelativeLayout>

<!-- Text needs to be reformatted  to look better on the screen and images need to be created for the shapes -->